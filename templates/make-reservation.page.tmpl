{{template "base" .}}

{{define "content"}}

    <div class="container-fluid">

        <div class="row">
            <div class="col">
                <h1>Make reservation</h1>
                <form action="make-reservation" method="post" class="" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                    <div class="form-group mt-5">
                        <label for="first_name">First Name:</label>
                        {{with .Form.Errors.Get "first_name"}}
                            <lable class="text-danger">{{.}}</lable>
                        {{end}}
                        <input type="text" name="first_name" id="first_name" class="form-control {{with .Form.Errors.Get "first_name"}} is-invalid {{end}}" required autocomplete="off" style="max-width: 50%;">
                    </div>

                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        {{with .Form.Errors.Get "last_name"}}
                            <lable class="text-danger">{{.}}</lable>
                        {{end}}
                        <input type="text" name="last_name" id="last_name" class="form-control" required autocomplete="off" style="max-width: 50%;">
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" class="form-control" required autocomplete="off" style="max-width: 50%;">
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone number:</label>
                        <input type="text" name="phone" id="phone" class="form-control" required autocomplete="off" style="max-width: 50%;">
                    </div>

                    <input type="submit" class="btn btn-primary" value="Make Reservation">

                </form>

            </div>
        </div>

    </div>

{{end}}